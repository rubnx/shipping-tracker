# Production Environment Configuration

# API Configuration
PRODUCTION_API_URL=https://api.shipping-tracker.com
PRODUCTION_FRONTEND_URL=https://shipping-tracker.com

# Database Configuration
DATABASE_URL=postgresql://prod_user:prod_pass@prod-db.com:5432/shipping_tracker_prod
REDIS_URL=redis://prod-redis.com:6379

# External APIs (production endpoints)
MAERSK_API_KEY=production_maersk_key
MSC_API_KEY=production_msc_key
PROJECT44_API_KEY=production_project44_key
CMA_CGM_API_KEY=production_cma_cgm_key
COSCO_API_KEY=production_cosco_key
HAPAG_LLOYD_API_KEY=production_hapag_lloyd_key

# Monitoring and Logging
SENTRY_DSN_FRONTEND=https://production-frontend-dsn@sentry.io/project
SENTRY_DSN_BACKEND=https://production-backend-dsn@sentry.io/project
LOG_LEVEL=info
LOG_ROTATION_ENABLED=true
LOG_RETENTION_DAYS=90

# Deployment Configuration
VERCEL_TOKEN=production_vercel_token
NETLIFY_AUTH_TOKEN=production_netlify_token
RAILWAY_TOKEN=production_railway_token
RENDER_DEPLOY_HOOK=https://api.render.com/deploy/production-hook

# Security
JWT_SECRET=production_jwt_secret_32_chars_minimum_change_this
API_SECRET_KEY=production_api_secret_32_chars_minimum_change_this

# Performance
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL_SECONDS=600
API_TIMEOUT_MS=10000

# Feature Flags
DEMO_MODE=false
ENABLE_MOCK_DATA=false

# Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/production/webhook
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/alerts/webhook