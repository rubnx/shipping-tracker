# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Map Configuration (Optional - uses OpenStreetMap by default)
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
VITE_DEFAULT_MAP_CENTER_LAT=40.7128
VITE_DEFAULT_MAP_CENTER_LNG=-74.0060
VITE_DEFAULT_MAP_ZOOM=10

# Demo Mode Configuration
VITE_DEMO_MODE=true
VITE_ENABLE_MOCK_DATA=true
VITE_SHOW_API_STATUS=true

# Feature Flags
VITE_ENABLE_SEARCH_HISTORY=true
VITE_ENABLE_MAP_COMPONENT=true
VITE_ENABLE_TIMELINE_COMPONENT=true
VITE_ENABLE_VESSEL_TRACKING=true

# Development Configuration
VITE_ENABLE_DEBUG_LOGS=true
VITE_SHOW_PERFORMANCE_METRICS=false

# Sentry Configuration
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_APP_VERSION=1.0.0

# Cache Configuration
VITE_CACHE_TTL_MINUTES=5
VITE_MAX_SEARCH_HISTORY=10

# UI Configuration
VITE_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_MOBILE_BREAKPOINT=768