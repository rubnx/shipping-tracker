# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# === MAJOR OCEAN CARRIERS (9 PROVIDERS) ===
MAERSK_API_KEY=your_maersk_api_key_here
MSC_API_KEY=your_msc_api_key_here
CMA_CGM_API_KEY=your_cma_cgm_api_key_here
COSCO_API_KEY=your_cosco_api_key_here
HAPAG_LLOYD_API_KEY=your_hapag_lloyd_api_key_here
EVERGREEN_API_KEY=your_evergreen_api_key_here
ONE_LINE_API_KEY=your_one_line_api_key_here
YANG_MING_API_KEY=your_yang_ming_api_key_here
ZIM_API_KEY=your_zim_api_key_here

# === PREMIUM AGGREGATORS ===
PROJECT44_API_KEY=your_project44_api_key_here
PROJECT44_BASE_URL=https://api.project44.com/v4
PROJECT44_ENABLED=false

# === VESSEL TRACKING SERVICES (2 PROVIDERS) ===
MARINE_TRAFFIC_API_KEY=your_marine_traffic_api_key_here
VESSEL_FINDER_API_KEY=your_vessel_finder_api_key_here

# === FREE TIER APIs (Recommended for development) ===
# Track-Trace Free API - No API key required for basic usage
TRACK_TRACE_API_KEY=
TRACK_TRACE_BASE_URL=https://api.track-trace.com/v1
TRACK_TRACE_ENABLED=true

# ShipsGo Freemium API - Free tier available (sign up at shipsgo.com)
# Get your free API key at: https://www.shipsgo.com/api
SHIPSGO_API_KEY=your_shipsgo_api_key_here
SHIPSGO_BASE_URL=https://api.shipsgo.com/v2
SHIPSGO_ENABLED=true

# SeaRates Freemium API - Free tier available (sign up at searates.com)
# Get your free API key at: https://www.searates.com/api
SEARATES_API_KEY=your_searates_api_key_here
SEARATES_BASE_URL=https://api.searates.com/v1
SEARATES_ENABLED=true

# Database Configuration (for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/shipping_tracker

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
JWT_SECRET=your_jwt_secret_32_chars_minimum_change_in_production
API_SECRET_KEY=your_api_secret_32_chars_minimum_change_in_production
CORS_ORIGIN=http://localhost:5173

# Demo Mode Configuration
DEMO_MODE=true
ENABLE_MOCK_DATA=true
CACHE_TTL_SECONDS=300

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Sentry Configuration
SENTRY_DSN=your_sentry_dsn_here
APP_VERSION=1.0.0

# Log Rotation Configuration
LOG_ROTATION_ENABLED=true
LOG_DIRECTORY=./logs
LOG_MAX_FILE_SIZE=100
LOG_MAX_FILES=10
LOG_ROTATION_INTERVAL=24
LOG_COMPRESSION_ENABLED=true
LOG_RETENTION_DAYS=30

# Alert Configuration
ALERT_WEBHOOK_URL=your_slack_webhook_url_here

# API Timeout Configuration
API_TIMEOUT_MS=10000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_MS=1000